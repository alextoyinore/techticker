rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin-level roles
    function isCMSAdmin() {
      return request.auth.token.role in ['superadmin', 'admin', 'editor', 'writer'];
    }

    match /layouts/{layoutId} {
      allow read, write: if isCMSAdmin();
    }

    match /widgets/{widgetId} {
        allow read, write: if isCMSAdmin();
    }

    match /articles/{articleId} {
      // Admins can do anything
      allow read, write: if isCMSAdmin();

      // Public can only read published articles
      allow get: if resource.data.status == 'Published';
    }

    match /pages/{pageId} {
      // Admins can read and write all pages
      allow read, write: if isCMSAdmin();
      
      // Public can only read published pages
      allow get: if resource.data.status == 'Published';
    }

    match /categories/{categoryId} {
        allow read, write: if isCMSAdmin();
    }

    match /comments/{commentId} {
        // Admins can read/write any comment
        allow read, write: if isCMSAdmin();
        
        // Authenticated users can create comments
        allow create: if request.auth != null;
        
        // Public can only read approved comments
        allow list: if resource.data.status == 'Approved';
    }

    match /users/{userId} {
      // Admins can read all user docs
      allow read: if isCMSAdmin();
      
      // Admins can write to any user doc, users can only write to their own
      allow write: if isCMSAdmin() || request.auth.uid == userId;
    }
    
    match /mail/{docId} {
      // Only server-side admin SDK can create mail documents
      allow read: if false;
      allow write: if request.auth == null;
    }
  }
}
